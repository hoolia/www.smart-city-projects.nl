            {{ block.settings.icon6 }}
          </a>
          {% endif %}
                  {% if block.settings.icon7 != blank %}
          <a href="{{ block.settings.link7 }}">
            {{ block.settings.icon7 }}
          </a>
          {% endif %}

{% endcomment %}
        
          </nav>
