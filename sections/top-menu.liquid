          <a href="{{ block.settings.link4 }}">{{ block.settings.icon4 }}</a>
          {% endif %}
          {% if block.settings.icon5 != blank %}
            <a href="{{ block.settings.link5 }}">
            {{ block.settings.icon5 }}
          </a>
          {% endif %}
                  {% if block.settings.icon6 != blank %}
