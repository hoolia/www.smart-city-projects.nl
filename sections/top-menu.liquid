<style>
{% if template != 'index' %}
           
  .header_top_nav_menu {
    display: block;
    height: 6.5rem;
}
  {% endif %}


.header_top_nav_menu .menu_ul {
  list-style-type: none;
  display: flex;
  width: 100%;
  margin: 0;
}
.header_top_nav_menu .menu_ul li {
  width: 100%;
  text-align: center;
  text-transform: uppercase;
  margin: 0;
  padding: 10px 0px;
  font-size: 18px;
  font-weight: bold;
  letter-spacing: 0;
  
}
  
.header_top_nav_menu .menu_ul li:hover {
  cursor: pointer;
}
  
.header_top_nav_menu .menu_ul:hover a {
  text-decoration: none;
}

@media only screen and (max-width: 1300px) {
.header_top_nav_menu .menu_ul li {
     font-size: 14px;
    font-weight: bold;
    letter-spacing: 0;
}
  }
  
@media only screen and (max-width: 768px) {
  .header_top_nav_menu .menu_ul li {
    font-size: 12px;
    font-weight: 600;
    letter-spacing: 0;
    justify-content: center;
    align-items: center;
    display: flex;
    height: 45px;
    padding: 0;
    margin: 0;
  }
}
