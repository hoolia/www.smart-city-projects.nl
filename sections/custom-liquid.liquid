{% comment %}
  }}<section class="Section Section--spacingNormal" id="section-{{ section.id }}">
    <div class="Container">
      {%- if section.settings.subheading != blank or section.settings.title != blank -%}
        <header class="SectionHeader SectionHeader--center">
          {%- if section.settings.subheading != blank -%}
            <h3 class="SectionHeader__SubHeading Heading u-h6">{{ section.settings.subheading | escape }}</h3>
          {%- endif -%}

          {%- if section.settings.title != blank -%}
            <h2 class="SectionHeader__Heading Heading u-h1">{{ section.settings.title | escape }}</h2>
          {%- endif -%}
        </header>
      {%- endif -%}

      <div class="Liquid">
        {{ section.settings.liquid }}
      </div>
    </div>
  </section>

  {% schema %}
  {
    "name": "Custom Liquid",
    "class": "shopify-section--bordered",
    "settings": [
      {
        "type": "text",
        "id": "subheading",
        "label": "Sub-heading",
        "default": "Sub-heading"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Heading",
        "default": "Your Liquid"
      },
      {
        "type": "liquid",
        "id": "liquid",
        "label": "Liquid",
        "info": "Add app snippets or other Liquid code to create advanced customizations.",
        "default": "<p>Write your own custom Liquid content.</p>"
      }
    ],
    "presets": [
      {
        "category": "Advanced",
        "name": "Custom Liquid",
        "settings": {}
      }
    ]
  }
  {% endschema %}
{% endcomment %}
<div class="container">
  <div class="col col-sm-12 col-xs-12 col-md-6" data-aos="fade-up-right">
    <div class="row">
      <div class="containerr">
        <form class="toggle">
          <input type="radio" id="choice1" name="choice" value="In-house">
          <label for="choice1">In-house</label>

          <input type="radio" id="choice2" name="choice" value="external">
          <label for="choice2">External</label>

          <div id="flap"><span class="content">productive</span></div>
        </form>
      </div>
    </div>
    <div class="row">
      <div class="containerr">
        <form class="toggle1">
          <input type="radio" id="choice3" name="choice" value="Air">
          <label for="choice3"> Air </label>

          <input type="radio" id="choice4" name="choice" value=" Water">
          <label for="choice4"> Water </label>

          <div id="flap1"><span class="content">proactive</span></div>
        </form>
      </div>
    </div>
  </div>
</div>

<style>
      :root {
      --accent: #2bda04;
      --border-width: 1px;
      --border-radius: 35px;
      --font-size: 11;
  }





  .containerr {
      perspective: 800px;
      height: 30px;
      display: flex;
      justify-content: right;
      align-items: center;
      margin: 20;
      font-family: sans-serif;
      padding-right: 50 px;
  }

  .toggle {
      position: relative;
      border: solid var(--border-width) var(--accent);
      border-radius: var(--border-radius);
      transition: transform cubic-bezier(0, 0, 0.30, 4) .4s;
      transform-style: preserve-3d;
      perspective: 8000px;
      height: 16px;
    
  }

  .toggle>input[type="radio"] {
      display: none;
  }

  .toggle>#choice1:checked~#flap {
      transform: rotateY(-180deg);
  }

  .toggle>#choice1:checked~#flap>.content {
      transform: rotateY(-180deg);
  }

  .toggle>#choice2:checked~#flap {
      transform: rotateY(0deg);
  }

  .toggle>label {
      display: inline-block;
      min-width: 10px;
      padding: 1px;
      font-size: var(--font-size);
      text-align: center;
      color: var(--accent);
      cursor: pointer;
      vertical-align:middle;
      
  }

  .toggle>label,
  .toggle>#flap {
          font-weight: bold;
    text-transform: capitalize;
    height: 100px;
    margin: 0px;
    top: -5px;
    position: relative;
    padding-right: 4px;
    min-width: 45px;
     
  }

  .toggle>#flap {
      position: absolute;
      top: calc( 0px - var(--border-width));
      left: 50%;
      height: calc(100% + var(--border-width) * 2);
      width: 50%;
      display: flex;
      justify-content: center;
      align-items: center;
