        "settings": [
          {
            "type": "richtext",
            "id": "richtext",
            "label": "RichText"
          }

        ]
     },

  	 {
        "type": "Social_icons",
        "name": "Social_icons",
       "limit":1,
        "settings": [
          {
            "type": "image_picker",
            "id": "image1",
            "label": "Icon 1 "
          },
          {
            "type":"url",
            "id":"url1",
            "label":"Social Account URL 1"
          },
             {
            "type": "image_picker",
            "id": "image2",
            "label": "Icon 2"
          },
            {
            "type":"url",
            "id":"url2",
            "label":"Social Account URL 2 "
          },
                          {
            "type": "image_picker",
            "id": "image3",
            "label": "Icon 3"
          },
            {
            "type":"url",
            "id":"url3",
            "label":"Social Account URL 3 "
          },
             {
            "type": "image_picker",
            "id": "image4",
            "label": " Icon 4"
          },
            {
            "type":"url",
            "id":"url4",
            "label":"Social Account URL 4 "
          }
        ]
      },










     
	  {
        "type": "product_collection",
        "name": "Product Collection Widget",
        "settings": [
          {
            "type": "text",
            "id": "product_heading",
            "label": "Heading",
            "default": "Custom Products"
          },
          {
            "id": "collection",
            "type": "collection",
            "label": "Collection"
          }
        ]
      },
	  {
        "type": "menu",
        "name": "Menu Widget",
        "settings": [
          {
            "type": "link_list",
            "id": "footer_menu_1",
            "label": "Menu"
          }
        ]
      },
      {
        "type": "newsletter",
        "name": "Newsletter Widget",
        "settings": [
          {
            "type": "text",
            "id": "mailing_list_form_action",
            "label": "MailChimp form action URL",
            "info": "[Find your MailChimp form action URL](https://docs.shopify.com/manual/configuration/store-customization/communicating-with-customers/accounts-and-newsletters/get-a-mailchimp-form-action-url/)."
          },
          {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Subscribe",
            "info": "You can use the language editor for editing literals text as shown [here](https://help.shopify.com/manual/using-themes/change-wording). The literals are 'layout.footer.newsletter_title_1' & layout.footer.newsletter_description."
          }
        ]
      },
	  {
        "type": "instagram",
        "name": "Instagram Widget",
        "settings": [          
          {
            "type": "paragraph",
            "content": "Used in Design 1. Install free app [Section Feed](https:\/\/apps.shopify.com\/section-feed-by-maestrooo) and it will be added automatically"
          },
          {
            "type": "text",
            "id": "insta_title",
            "label": "Title",
            "default": "Instagram"
          }
        ]
      },
	  {
        "type": "content_box",
        "name": "Content Box",
        "settings": [
          {
            "type": "text",
