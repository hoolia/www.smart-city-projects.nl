          {
             "type": "text",
             "id": "footer_address",
             "label": "Contact Address",
			"default": "Laan van Gildestein 40 2151HV Amsterdam"
          },
          {
             "type": "text",
             "id": "footer_phone",
             "label": "Contact Phone",
			"default": "+31 252 799302"
          },
          {
             "type": "text",
             "id": "footer_email",
             "label": "Contact Email",
			"default": "sales@hoolia.energy"
          }
        ]
      },
  	 {
        "type": "Rich_Text",
        "name": "Rich_Text",
