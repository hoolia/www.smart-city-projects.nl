             "default":true
          }
        ]
      },
      {
        "type": "links",
        "name": "Sidebar links menu",
        "settings": [
          {
             "type": "link_list",
             "id": "sidebar_menu",
             "label": "Sidebar links menu"
          }
        ]
      },
      {
        "type": "recent-articles",
        "name": "Sidebar Recent Articles",
        "settings": [
          {
             "type":"checkbox",
             "id":"show_article_heading",
             "label":"Show Heading",
             "default":true
          },
		  {
             "type":"checkbox",
             "id":"article_publish_info",
             "label":"Show Publish Info",
             "default":false
          }
        ]
      },
      {
        "type": "tags",
        "name": "Sidebar Tags",
        "settings": [
          {
             "type":"checkbox",
             "id":"show_sidebar_tags_title",
             "label":"Show Title",
             "default":true
          }
        ]
      },
      {
        "type": "image",
        "name": "Sidebar Image",
        "settings": [
          {
             "type":"image_picker",
             "id":"side_image",
             "label":"Side image"
          },
          {
             "type":"url",
             "id":"side_link",
             "label":"Side image link"
          }
        ]
      }
	],
   "presets": []
}
