          {
          "value": "center",
          "label": "center"
          },
          {
          "value": "right",
          "label": "right"
          },
          {
          "value": "justify",
          "label": "justify"
          }
         ],
        "default": "left"
      },
	  {
         "type":"select",
         "id":"show_sidebar",
         "label":"Sidebar position",
         "options":[
            {
               "value":"no",
               "label":"No Sidebar"
            },
            {
               "value":"left",
               "label":"Left Sidebar"
            },
            {
               "value":"right",
               "label":"Right Sidebar"
            }
